<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <RelativeLayout
        android:id="@+id/green"
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:layout_marginTop="250px"
        android:background="#3baa36">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="100dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ratingBar"
            android:layout_marginEnd="79dp"
            android:layout_toStartOf="@+id/ratingBar"
            android:text="Du hast heute 1h gespielt \nund 17.356 Punkte gesammelt"
            android:textSize="26dp" />

        <ImageButton
            android:id="@+id/imageButton99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:background="#3baa36"
            android:src="@mipmap/zurueck" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="11dp"
        android:src="@mipmap/unbenannt" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/green"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginBottom="130dp"
        android:layout_marginEnd="266dp"
        android:layout_marginStart="463dp"
        android:layout_toEndOf="@+id/imageView"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="109dp"
        android:text="Inge Bosch"
        android:textColor="#3baa36"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="17dp"
        android:background="#FFFFFF"
        android:src="@mipmap/settingsbutton" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:background="#b8d78e">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/imageButton16"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:src="@mipmap/breakout"
                    android:text="TrainingsplÃ¤ne"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/imageButton15"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:src="@mipmap/ic_launcher"
                    android:text="Training starten"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/imageButton14"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:src="@mipmap/ic_launcher"
                    android:text="Einzelspiele"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

        </HorizontalScrollView>
    </RelativeLayout>

</RelativeLayout>
